<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schoolerc.dungeoncompanion.ui.display.CharacterDisplayActivity">
    <fragment
        android:id="@+id/fragmentCharacterList"
        android:layout_width="384dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.schoolerc.dungeoncompanion.ui.display.CharacterListFragment"
        tools:layout="@layout/fragment_character_list" />
    <View
        android:id="@+id/viewDividerListDetails"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/fragmentCharacterList"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/material_grey_400"/>
    <fragment
        android:id="@+id/fragmentCharacterDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:name="com.schoolerc.dungeoncompanion.ui.display.CharacterDetailsFragment"
        tools:layout="@layout/fragment_character_details"
        app:layout_constraintLeft_toRightOf="@id/viewDividerListDetails"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
