<?xml version="1.0" encoding="UTF-8" ?>
<race>
    <name>Dwarf</name>
    <ability-score-increase score="Constitution">2</ability-score-increase>
    <speed>25</speed>
    <vision type="darkvision">60</vision>
    <trait>
        <description>Dwarven Combat Training</description>
        <proficiency category="weapon">Battleaxe</proficiency>
        <proficiency category="weapon">Handaxe</proficiency>
        <proficiency category="weapon">Light Hammer</proficiency>
        <proficiency category="weapon">Warhammer</proficiency>
    </trait>
    <trait>
        <description>Dwarven Resilience</description>
        <advantage><saving-throw>poison</saving-throw></advantage>
        <resistance><damage>poison</damage></resistance>
    </trait>
    <trait>
        <description>Stonecunning</description>
        <proficiency double="yes" restriction="stonework" category="skill">History</proficiency>
    </trait>
    <trait>
        <description>Tool Proficiency</description>
        <choose quantity="1">
            <proficiency category="tool">Smith's Tools</proficiency>
            <proficiency category="tool">Brewer's Supplies</proficiency>
            <proficiency category="tool">Mason's Tools</proficiency>
        </choose>
    </trait>

    <language>Common</language>
    <language>Dwarvish</language>
</race>