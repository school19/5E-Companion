<?xml version="1.0" encoding="UTF-8" ?>
<race>
    <name>Dwarf</name>
    <ability-score-increase score="Constitution">2</ability-score-increase>
    <speed>25</speed>
    <vision type="darkvision">60</vision>
    <trait>
        <description>Dwarven Combat Training</description>
        <proficiency><weapon>Battleaxe</weapon></proficiency>
        <proficiency><weapon>Handaxe</weapon></proficiency>
        <proficiency><weapon>Light Hammer</weapon></proficiency>
        <proficiency><weapon>Warhammer</weapon></proficiency>
    </trait>
    <trait>
        <description>Dwarven Resilience</description>
        <advantage><saving-throw>poison</saving-throw></advantage>
        <resistance><damage>poison</damage></resistance>
    </trait>
    <trait>
        <description>Stonecunning</description>
        <requirement condition="stonecutting"><double><proficiency><skill>History</skill></proficiency></double></requirement>
    </trait>
    <trait>
        <description>Tool Proficiency</description>
        <choose quantity="1">
            <proficiency><tool>Smith's Tools</tool></proficiency>
            <proficiency><tool>Brewer's Supplies</tool></proficiency>
            <proficiency><tool>Mason's Tools</tool></proficiency>
        </choose>
    </trait>

    <language>Common</language>
    <language>Dwarvish</language>
</race>