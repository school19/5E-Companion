<?xml version="1.0" encoding="UTF-8" ?>
<race name="Dwarf">
    <ability-score-increase score="Constitution">2</ability-score-increase>
    <speed>25</speed>
    <vision type="darkvision">60</vision>
    <trait>
        <description>Dwarven Combat Training</description>
        <proficiency>battleaxe</proficiency>
        <proficiency>handaxe</proficiency>
        <proficiency>light hammer</proficiency>
        <proficiency>warhammer</proficiency>
    </trait>
    <trait>
        <description>Dwarven Resilience</description>
        <advantage on="saving-throw" with="poison"/>
        <resistance><damage>poison</damage></resistance>
    </trait>
    <trait>
        <description>Stonecunning</description>
        <skill-proficiency double="yes" restriction="stonework">History</skill-proficiency>
    </trait>
    <trait>
        <description>Tool Proficiency</description>
        <choose quantity="1">
            <proficiency>Smith's Tools</proficiency>
            <proficiency>Brewer's Supplies</proficiency>
            <proficiency>Mason's Tools</proficiency>
        </choose>
    </trait>

    <language>Common</language>
    <language>Dwarvish</language>

    <subrace name="Hill">
        <ability-score-increase score="Wisdom">1</ability-score-increase>
        <trait>
            <description>Dwarven Toughness</description>
            <modifier target="hit-points" operator="+"><variable>CHAR_LVL</variable></modifier>
        </trait>
    </subrace>
</race>